# Docker image versions
MAVEN_IMAGE=maven:3.9.9-eclipse-temurin-21
JRE_IMAGE=eclipse-temurin:21-jre

# Build configuration
JAVA_VERSION=21
MAVEN_OPTS_DOCKER=-Xmx1024m -XX:MaxMetaspaceSize=256m

# Application configuration
MAVEN_ARGS=-T1C -DskipTests
SPRING_PROFILES_ACTIVE=docker
SPRING_DATASOURCE_URL=jdbc:postgresql://db:5432/scheduler
SPRING_DATASOURCE_USERNAME=your_db_username
SPRING_DATASOURCE_PASSWORD=your_db_password

# Akeyless configuration (uncomment and configure to enable Akeyless integration)
# AKEYLESS_API_URL=https://api.akeyless.io
# AKEYLESS_API_KEY=your-api-key-here
# AKEYLESS_ACCESS_ID=your-access-id-here
# AKEYLESS_DB_SECRET_NAME=/database/postgresql/scheduler
# AKEYLESS_DB_REFRESH_INTERVAL=3600

LOGGING_LEVEL_ROOT=INFO
LOGGING_LEVEL_COM_EXAMPLE_SCHEDULER=DEBUG

# CSV base folder
CSV_BASE_FOLDER=./.data
EMPLOYEE_CSV_PROCESSED_FOLDER=${CSV_BASE_FOLDER}/ingest/employees/processed
EMPLOYEE_CSV_FILE_NAME_PREFIX=employees-